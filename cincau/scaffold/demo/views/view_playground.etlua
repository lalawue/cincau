<html>
    <head>
        <script>
            if ( window.history.replaceState ) {
                window.history.replaceState( null, null, window.location.href );
            }
        </script>
        <style type="text/css">
            html {
                width: 100%;
                background-color: #E8E8D3;
            }
            h1 {
                text-align: left;
                margin-top: 0.5in;
                margin-bottom: .2in;
                margin-left: .5in;
                font-size: 3em;
                font-weight: bold;
            }
            p {
                margin-left: .5in;
                margin-right: .5in;
            }
            form#input {
                margin-left: .5in;
                margin-right: .5in;                
            }
            ul {
                margin-left: -.3in;
            }
            .line {
                display: table;
                margin-left: .5in;
            }
            .cell {
                display: table-cell;
            }
            .right {
                position: right;                
            }            
        </style>
    </head>
    <body>
        <h1>Playground</h1>
        <hr />
            <div class="line">        
                <p class="cell">try input text: &nbsp;</p>
                <form class="cell" action="" method="POST">
                    <input type="text" name="input" placeholder="" />
                    <input type="submit" value="submit" />
                </form>
                &nbsp;&nbsp;&nbsp;&nbsp; | &nbsp;&nbsp;&nbsp;&nbsp;
                <p class="cell">or try upload file:</p>
                <form class="cell" action="" method="POST" enctype="multipart/form-data">
                    <input type="file" name="myfile" />
                    <input type="submit" />
                </form>
            </div>
        <hr />
        <ul>
            <% for i, str in pairs(inputs) do %>
                <div class="line">
                    <li class="cell"> <%- i -%>. text: <%- str -%></li>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <form class="cell" action="" method="POST">
                        <input type="hidden" name="delete" value="<%- str -%>" />
                        <input type="submit" value="delete" />
                    </form>
                </div>
            <% end %>
        </ul>
    </body>
</html>