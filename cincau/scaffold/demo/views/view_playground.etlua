<html>
    <head>
        <script>
            if ( window.history.replaceState ) {
                window.history.replaceState( null, null, window.location.href );
            }
        </script>
        <style type="text/css">
            html {
                width: 100%;
                background-color: #E8E8D3;
            }
            h1 {
                text-align: left;
                margin-top: 0.5in;
                margin-bottom: .2in;
                margin-left: .5in;
                font-size: 3em;
                font-weight: bold;
            }
            p {
                margin-left: .5in;
                margin-right: .5in;
            }
            form#input {
                margin-left: .5in;
                margin-right: .5in;                
            }
            ul {
                margin-left: .3in;
            }
            .line {
                display: table;
            }
            .cell {
                display: table-cell;
            }
        </style>
    </head>
    <body>
        <h1>Playground</h1>
        <hr />
        <p>try input something:</p>
        <form id="input" action="" method="POST">
            text: <input type="text" name="input" placeholder="" />
            <input type="submit" value="submit" />
        </form>
        <hr />
        <ul>
            <% for _, str in pairs(inputs) do %>
                <div class="line">
                    <li class="cell">text: <%- str -%></li>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <form class="cell" action="" method="POST">
                        <input type="submit" name="<%- str -%>" value="delete" />
                    </form>
                </div>
            <% end %>
        </ul>
    </body>
</html>