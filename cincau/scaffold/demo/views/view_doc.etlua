  <html>
    <head>
        <style type="text/css">
            html {
                width: 100%;
                background-color: #E8E8D3;
            }
            h1 {
                text-align: left;
                margin-top: 0.5in;
                margin-bottom: .2in;
                margin-left: .5in;
                font-size: 3em;
                font-weight: bold;
            }
            h2,h3 {
                text-align: left;
                margin-left: .5in;
            }
            p {
                margin-left: .5in;
                margin-right: .5in;                
            }
            ul {
                margin-left: .3in;
            }
            span {
                position: relative;
                left: -45%;
            }
        </style>
    </head>
    <body>
        <h1><%= name %></h1>
        <hr />
        <% for _, line in pairs(paragraphs) do %>
            <%- line %>
        <% end %>
    </body>
  </html>