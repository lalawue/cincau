  <html>
    <head>
        <style type="text/css">
            html {
                width: 100%;
                background-color: #E8E8D3;
            }
            h1 {
                text-align: center;
                margin-top: 2.2in;
                margin-bottom: .3in;
                font-size: 3em;
                font-weight: bold;
            }
            ul {
                float: right;
                position: relative;
                left: -40%;
                text-align: left;
            }
            .footer {
                margin-top: 1.70in;
                margin-left: 41.5%;
            }
        </style>
    </head>
    <body>
        <h1><%= title %></h1>
        <ul>
            <% for i, f in pairs(features) do %>
                <li><%- f -%></li>
            <% end %>
        </ul>
        <div class="footer"><%- footer -%></div>
    </body>
  </html>